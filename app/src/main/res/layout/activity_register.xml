<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".auth.RegisterActivity">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="300dp"
        android:background="@color/colorPrimary"
        android:orientation="vertical">
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="@color/white"
          android:textStyle="bold"
          android:textSize="24sp"
          android:text="Sign up"
          android:layout_gravity="center_horizontal"
          android:layout_marginTop="22dp"

          />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="@color/white"
          android:textStyle="bold"
          android:textSize="16sp"
          android:text="Please provide your information"
          android:layout_gravity="center_horizontal"
          android:layout_marginTop="16dp"
          />




  </LinearLayout>
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:id="@+id/numberLayout"
        android:layout_marginTop="-120dp"
        android:layout_marginHorizontal="36dp"
        >


      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="12dp"
          android:paddingTop="15dp"
          tools:ignore="MissingClass"
          android:orientation="vertical">


        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/avatar"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Upload Image"
            android:layout_gravity="center_horizontal"
            />



        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

          <com.google.android.material.textfield.TextInputEditText
              android:layout_width="match_parent"
              android:layout_height="60dp"
              android:hint="Name"
              android:inputType="number"
              android:id="@+id/userName"
              android:drawableLeft="@drawable/user_name"
              android:drawablePadding="10dp"

              />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

          <com.google.android.material.textfield.TextInputEditText
              android:layout_width="match_parent"
              android:layout_height="60dp"
              android:hint="Email"
              android:inputType="number"
              android:id="@+id/userEmail"
              android:drawableLeft="@drawable/user_email"
              android:drawablePadding="10dp"

              />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

          <com.google.android.material.textfield.TextInputEditText
              android:layout_width="match_parent"
              android:layout_height="60dp"
              android:hint="City"
              android:inputType="text"
              android:id="@+id/userCity"
              android:drawableLeft="@drawable/user_location"
              android:drawablePadding="10dp"

              />
        </com.google.android.material.textfield.TextInputLayout>
        
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/termsCondition"
            android:textColor="@color/black"
            android:layout_gravity="center_horizontal"
            android:textSize="10sp"
            android:text="By clicking on that you are accepting our terms and conditions"
            />

        <Button
            android:background="@drawable/btn_bg"
            android:id="@+id/btnContinue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Continue"
            android:gravity="center"
            />

      </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

  </LinearLayout>

  </androidx.core.widget.NestedScrollView>